<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/float_view1"
    android:layout_width="250dp"
    android:layout_height="280dp"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="90dp" >

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:layout_margin="14dp" >

            <ImageButton
                android:id="@+id/line1Unit1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ic_home"
                android:padding="0dp"
                android:tag="0"/>

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1Unit1"
                android:gravity="center_horizontal"
                android:text="主屏" 
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:layout_margin="14dp" >

            <ImageButton
                android:id="@+id/line1Unit2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ic_task"
                android:padding="0dp" 
                android:tag="1"/>

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1Unit2"
                android:gravity="center_horizontal"
                android:text="最近" 
                android:textSize="12sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:layout_margin="14dp"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="55dp"
                android:layout_height="55dp" >

                <ImageButton
                    android:id="@+id/line1Unit3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/ic_notice" 
                    android:tag="2"/>

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:tag="tvTime"
                    android:text="09:00" 
                    android:textSize="12sp"/>
            </FrameLayout>

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="通知" 
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="90dp" >

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:layout_margin="14dp" >

            <ImageButton
                android:id="@+id/line2Unit1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ic_phone"
                android:padding="0dp"
                android:tag="3" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2Unit1"
                android:gravity="center_horizontal"
                android:text="设置" 
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:layout_margin="14dp" >

            <ImageButton
                android:id="@+id/line2Unit2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ic_flashlight_off"
                android:padding="0dp" 
                android:tag="4"/>

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2Unit2"
                android:gravity="center_horizontal"
                android:text="手电筒" 
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:layout_margin="14dp" >

            <ImageButton
                android:id="@+id/line2Unit3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ic_clean_memory"
                android:padding="0dp"
                android:tag="5" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2Unit3"
                android:gravity="center_horizontal"
                android:text="加速" 
                android:textSize="12sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:scaleType="center" >

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:layout_margin="14dp" >

            <ImageButton
                android:id="@+id/line3Unit1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ic_contrall"
                android:padding="0dp"
                android:tag="6" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3Unit1"
                android:gravity="center_horizontal"
                android:text="控制中心" 
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:layout_margin="14dp" >

            <ImageButton
                android:id="@+id/line3Unit2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ic_null"
                android:padding="0dp" 
                android:tag="7"/>

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3Unit2"
                android:gravity="center_horizontal"
                android:tag="tag11"
                android:text="" 
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:layout_margin="14dp" >

            <ImageButton
                android:id="@+id/line3Unit3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ic_null"
                android:padding="0dp" 
                android:tag="8"/>

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3Unit3"
                android:gravity="center_horizontal"
                android:tag="tag12"
                android:text="" 
                android:textSize="12sp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>